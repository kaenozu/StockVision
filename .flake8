[flake8]
# Maximum line length
max-line-length = 100

# Exclude directories and files
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .coverage,
    htmlcov,
    *.egg-info,
    build,
    dist,
    venv,
    .venv,
    env,
    .env,
    node_modules,
    migrations/versions,
    data/,
    logs/

# Error codes to ignore
ignore = E203,W503,F401

# Maximum complexity
# max-complexity = 10

# Docstring conventions
# docstring-convention = google

# Import order
# import-order-style = google

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811,E501
    */migrations/*:F401,E501
