# Normalize line endings and avoid platform-specific diffs
* text=auto

# Enforce LF for source files
*.py   text eol=lf
*.ts   text eol=lf
*.tsx  text eol=lf
*.js   text eol=lf
*.jsx  text eol=lf
*.sh   text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.md   text eol=lf
*.json text eol=lf
requirements.txt text eol=lf

# Keep Windows batch scripts with CRLF
*.bat text eol=crlf
