# EditorConfig helps maintain consistent coding styles between different editors and IDEs
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.{ts,tsx,js,jsx,json,md}]
indent_size = 2
