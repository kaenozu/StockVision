# Backend settings
USE_REAL_YAHOO_API=false
DATABASE_URL=sqlite:///data/stock_tracking.db
LOG_LEVEL=INFO

# CORS
# Comma-separated list of production origins, e.g. https://prod.example.com, https://www.stockvision.jp
PROD_CORS_ORIGINS=

# OpenAPI servers (optional)
API_PUBLIC_URL=
API_ADDITIONAL_SERVER_URLS=

# Metrics
ENABLE_METRICS=false
# Protect /metrics with Basic Auth: set as user:pass (leave empty to disable auth)
METRICS_BASIC_AUTH=
# Restrict /metrics access by CIDR/IP (comma-separated). Example: 127.0.0.1/32, 10.0.0.0/8, ::1
METRICS_ALLOW_CIDRS=

# Optional: Debug mode
DEBUG=false
